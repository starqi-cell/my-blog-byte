{
  "name": "my-ssr-blog",
  "version": "1.0.0",
  "description": "A full-stack SSR blog system with React, Express, MySQL and Redis",
  "type": "module",
  "scripts": {
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr server/entry-server.tsx --outDir dist/server",
    "build": "npm run build:client && npm run build:server",
    "preview": "cross-env NODE_ENV=production tsx server/index.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:init": "tsx server/scripts/initDb.ts",
    "hash:password": "tsx server/scripts/hashPassword.ts"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "@types/multer": "^2.0.0",
    "antd": "^5.12.2",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.4",
    "markdown-it": "^14.0.0",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "redis": "^4.6.12",
    "remark-gfm": "^4.0.0",
    "sirv": "^2.0.4",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/file-saver": "^2.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
